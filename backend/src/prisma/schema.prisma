generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  USER
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
}

model Item {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  category    String
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  userName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rol       Roles    @default(USER)
}
